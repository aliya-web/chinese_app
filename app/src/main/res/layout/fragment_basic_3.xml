<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Basic_3Fragment">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:scrollbars="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_abp1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:text="@string/apb3"
                android:textStyle="bold"
                android:textSize="16dp"/>

            <GridLayout
                android:id="@+id/grid1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:layout_below="@+id/text_abp1"
                android:columnCount="8"
                android:rowCount="5">
                <com.google.android.material.card.MaterialCardView
                    app:strokeColor="@color/lavender"
                    app:strokeWidth="2dp"
                    android:backgroundTint="@color/white"
                    android:layout_width="100dp"
                    android:layout_height="150dp"
                    app:cardElevation="2dp"
                    android:layout_margin="8dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    android:layout_row="0"
                    android:layout_column="0">
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/a1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-4dp"
                        android:padding="30dp"
                        android:layout_row="0"
                        android:layout_column="0"
                        android:textSize="30dp"
                        android:text="ā" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:textAlignment="center"
                        android:text="ສຽງທີ່ 1"
                        android:layout_marginBottom="15dp"
                        tools:ignore="RtlCompat" />
                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.card.MaterialCardView
                    app:strokeColor="@color/lavender"
                    app:strokeWidth="2dp"
                    android:backgroundTint="@color/white"
                    android:layout_width="100dp"
                    android:layout_height="150dp"
                    android:layout_margin="8dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    android:layout_row="0"
                    android:layout_column="1">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/a2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="30dp"
                        android:layout_marginTop="-4dp"
                        android:layout_row="0"
                        android:layout_column="0"
                        android:text="á"
                        android:textSize="30dp" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:textAlignment="center"
                        android:text="ສຽງທີ່ 2"
                        android:layout_marginBottom="15dp"
                        tools:ignore="RtlCompat" />
                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.card.MaterialCardView
                    app:strokeColor="@color/lavender"
                    app:strokeWidth="2dp"
                    android:backgroundTint="@color/white"
                    android:layout_width="100dp"
                    android:layout_height="150dp"
                    android:layout_margin="8dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    android:layout_row="1"
                    android:layout_column="0">
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/a3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-4dp"
                        android:padding="30dp"
                        android:layout_row="0"
                        android:layout_column="0"
                        android:textSize="30dp"
                        android:text="ǎ" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:textAlignment="center"
                        android:text="ສຽງທີ່ 3"
                        android:layout_marginBottom="15dp"
                        tools:ignore="RtlCompat" />
                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.card.MaterialCardView
                    app:strokeColor="@color/lavender"
                    app:strokeWidth="2dp"
                    android:backgroundTint="@color/white"
                    android:layout_width="100dp"
                    android:layout_height="150dp"
                    android:layout_margin="8dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    android:layout_row="1"
                    android:layout_column="1">
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/a4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-4dp"
                        android:padding="30dp"
                        android:layout_row="0"
                        android:layout_column="0"
                        android:textSize="30dp"
                        android:text="à" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:textAlignment="center"
                        android:text="ສຽງທີ່ 4"
                        android:layout_marginBottom="15dp"
                        tools:ignore="RtlCompat" />
                </com.google.android.material.card.MaterialCardView>
            </GridLayout>
            <TextView
                android:id="@+id/textexample"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/grid1"
                android:layout_marginTop="10dp"
                android:textAlignment="center"
                android:text="ຕົວຢ່າງ: ນຳເອົາ ພະຍັນສະຊະ, ສະຫຼະ ແລະ ວັນນະຍຸດລວມກັນ"/>
            <HorizontalScrollView
                android:layout_below="@+id/textexample"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="8dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:columnCount="8"
                android:rowCount="5">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/apb_b1"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:background="@drawable/button_selector"
                    android:layout_margin="2dp"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:textSize="30dp"
                    android:text="bā" />
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/apb_b2"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:background="@drawable/button_selector"
                    android:layout_margin="2dp"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:textSize="30dp"
                    android:text="bá" />
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/apb_b3"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:background="@drawable/button_selector"
                    android:layout_margin="2dp"
                    android:layout_row="0"
                    android:layout_column="2"
                    android:textSize="30dp"
                    android:text="bǎ" />
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/apb_b4"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:background="@drawable/button_selector"
                    android:layout_margin="2dp"
                    android:layout_row="0"
                    android:layout_column="3"
                    android:textSize="30dp"
                    android:text="bà" />

            </GridLayout>
            </HorizontalScrollView>
        </RelativeLayout>
    </ScrollView>
</FrameLayout>