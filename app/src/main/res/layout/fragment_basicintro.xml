<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BasicintroFragment">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:scrollbars="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="10dp"
                android:text="ອົງປະກອບຂອງຕົວພິນອິນ (pinyin)"
                android:textStyle="bold"
                android:textSize="18dp"/>
            <TextView
                android:id="@+id/text_abp1"
                android:layout_below="@+id/text1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="10dp"
                android:text="@string/basic1"
                android:textSize="14dp"/>
            <ImageView
                android:id="@+id/img1"
                android:layout_below="@+id/text_abp1"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/pinyin">
            </ImageView>
            <TextView
                android:id="@+id/text2"
                android:layout_below="@id/img1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:text="ພະຍັນຊະນະ"
                android:textStyle="bold"
                android:textSize="18dp"/>
            <TextView
                android:id="@+id/text_abp2"
                android:layout_below="@+id/text2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:text=" @string/apb11"
                android:textSize="14dp"/>
            <TextView
                android:id="@+id/text3"
                android:layout_below="@id/text_abp2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:text="ສະຫຼະ"
                android:textStyle="bold"
                android:textSize="18dp"/>
            <TextView
                android:id="@+id/text_abp3"
                android:layout_below="@+id/text3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:text=" @string/apb22"
                android:textSize="14dp"/>
            <TextView
                android:id="@+id/text4"
                android:layout_below="@id/text_abp3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:text="ວັນນະຍຸດ"
                android:textStyle="bold"
                android:textSize="18dp"/>
            <TextView
                android:id="@+id/text_abp4"
                android:layout_below="@+id/text4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="20dp"
                android:text="@string/apb33"
                android:textSize="14dp"/>
        </RelativeLayout>
    </ScrollView>

</FrameLayout>